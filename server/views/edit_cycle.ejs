    <script>
    let get_cycles=[];
    let hour;
    let weekcal;
    $( document ).ready(function() {
        weekcal.weekLine("setSelected", '<%=day%>');
    })


    $(".timepicker").picktim({
                                mode: 'h12',
                                defaultValue: '<%=parseInt(hour)%>:<%=parseInt(minutes)%>',
                                icons: {
                                        up: 'zmdi zmdi-chevron-up',
                                        down: 'zmdi zmdi-chevron-down'
                                    }
                            });

        weekcal = $("#weekCal").weekLine({
        mousedownSel: false,
        onChange: function () {
            let get_cycles = [];
                $("#selectedDays").html(
                        $(this).weekLine('getSelected')
                );

                for(let i =0;i<$('.selectedDay').length;i++){
                    get_cycles.push(document.getElementsByClassName("selectedDay").item(i).innerHTML);
                }
        }
        });

        function save_cycle(){
            let new_hour = document.getElementById("new_hour").value+":00"

            for(let i =0;i<$('.selectedDay').length;i++){
                get_cycles.push(document.getElementsByClassName("selectedDay").item(i).innerHTML);
            }
            
            if(get_cycles.length == 0){
                document.getElementById("select_days").setAttribute("style","display:block");
            }else{
            $.ajax({
                url:"/device/edit_cycle",
                method:"PATCH",
                data:{
                    day:'<%=day%>',
                    cycle_ID:<%=ID%>,
                    new_hour:new_hour,
                    new_duration:document.getElementById("new_duration").value,
                    new_status:document.getElementById("cycle_status").getAttribute("class")
                }
            }).done(function(data){
                get_cycles = [];
                location.replace("/");
            }).fail(function(err){
                get_cycles =[];
            })
        }
        }

        function change_status(){
            let aux = document.getElementById("cycle_status").getAttribute("class");
            if(aux.includes("check")){
                document.getElementById("cycle_status").setAttribute("class","zmdi zmdi-close zmdi-hc-3x")
            }else{
                document.getElementById("cycle_status").setAttribute("class","zmdi zmdi-check zmdi-hc-3x")
            }
            
        }

        function verif_duration(elem){
            if(elem.value<0){
                elem.value = 0;
            }
            console.log(elem.value);
            if(elem.value>999){
                elem.value = 999;
            }
        }
    </script>
